@model IEnumerable<UniFilteringproject.Models.Malshab>

@{
	// This pulls the title we set in the Controller: "Viable - [AssignmentName]"
	ViewData["Title"] = ViewData["Title"];
}

<h1>Viable - @ViewData["AssignmentName"]</h1>

<p>
	<a asp-action="Index">Back to Full List</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Dapar)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Profile)
			</th>
			<th>
				Status
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Dapar)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Profile)
				</td>
				<td>
					@if (item.IsAssigned)
					{
						<span class="text-danger">Assigned</span>
					}
					else
					{
						<span class="text-success">Available</span>
					}
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>