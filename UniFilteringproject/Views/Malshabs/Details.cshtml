@model UniFilteringproject.Models.Malshab

@{
    ViewData["Title"] = "Malshab Details";
    var assignments = ViewBag.Assignments as List<UniFilteringproject.Models.Assignment>;
    var blockedIds = ViewBag.BlockedAssignmentIds as List<int>;

    // Check for the specific assignment record to get the name
    var assignmentRecord = Model.MalAssignedList?.FirstOrDefault();
}

<h1>Details for @Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Personal Stats</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">
                @if (Model.IsAssigned)
                {
                    @if (assignmentRecord != null && assignmentRecord.Assignment != null)
                    {
                        <span class="badge bg-success">Assigned to @assignmentRecord.Assignment.Name</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Assigned</span>
                    }
                }
                else
                {
                    <span class="badge bg-secondary">Unassigned</span>
                }
            </dd>
            <dt class="col-sm-4">Dapar</dt>
            <dd class="col-sm-8">@Model.Dapar</dd>
            <dt class="col-sm-4">Profile</dt>
            <dd class="col-sm-8">@Model.Profile</dd>
        </dl>
    </div>

    <div class="col-md-6">
        <h4>Ability Scores</h4>
        <hr />
        @if (Model.MalAbis != null && Model.MalAbis.Any())
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Ability</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var abi in Model.MalAbis)
                    {
                        <tr>
                            <td>@(abi.ability?.Name ?? "Unknown")</td>
                            <td>
                                <span class="badge bg-info text-dark">Level @abi.AbiLevel</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No ability scores recorded.</p>
        }
    </div>
</div>

<hr />

<h3>Assignment Blockages</h3>
<p class="text-muted">Blocked assignments will be ignored during the Auto-Assignment process for @Model.Name.</p>

<table class="table">
    <thead>
        <tr>
            <th>Assignment Name</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in assignments ?? new List<UniFilteringproject.Models.Assignment>())
        {
            bool isBlocked = blockedIds?.Contains(item.Id) ?? false;
            <tr>
                <td>@item.Name</td>
                <td>
                    @if (isBlocked)
                    {
                        <span class="badge bg-danger">Blocked</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Available</span>
                    }
                </td>
                <td>
                    <form asp-action="ToggleBlock" method="post">
                        <input type="hidden" name="malshabId" value="@Model.Id" />
                        <input type="hidden" name="assignmentId" value="@item.Id" />
                        <button type="submit" class="btn btn-sm @(isBlocked ? "btn-outline-success" : "btn-outline-danger")">
                            @(isBlocked ? "Unblock" : "Block")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>