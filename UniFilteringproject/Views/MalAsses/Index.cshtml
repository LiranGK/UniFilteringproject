@model IEnumerable<UniFilteringproject.Models.MalAss>

@{
    ViewData["Title"] = "Index";
}

<h1>Assigned Malshabs</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Attention:</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between mb-3">
    <p>
        <a asp-action="Create" class="btn btn-primary">Assign Manually</a>
    </p>

    <form asp-action="RunAutoAssignment" method="post">
        <button type="submit" class="btn btn-warning"
                onclick="return confirm('This will clear current assignments and recalculate. Proceed?')">
            <i class="bi bi-cpu"></i> Run Auto-Assignment
        </button>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Malshab Name</th>
            <th>Assignment Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Malshab.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Assignment.Name)</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>