@model UniFilteringproject.Models.Ability

@{
    ViewData["Title"] = "Ability Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Details for Ability: @Model.Name</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Ability</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    @* Dedicated Description Section *@
    <div class="card mb-4 border-info">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Description</h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="lead mb-0" style="white-space: pre-wrap;">@Model.Description</p>
            }
            else
            {
                <p class="text-muted mb-0 italic">No description provided for this ability.</p>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">General Information</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Ability Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
            </dl>
        </div>
    </div>
</div>