@model UniFilteringproject.Models.Assignment

@{
    ViewData["Title"] = "Assignment Details";
}

<h1>Details for Assignment: @Model.Name</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h4>General Requirements</h4>
            <dl class="row">
                <dt class="col-sm-5">Minimum Malshabs</dt>
                <dd class="col-sm-7">@Model.MinMalshabs</dd>

                <dt class="col-sm-5">Dapar Needed</dt>
                <dd class="col-sm-7">@Model.DaparNeeded</dd>

                <dt class="col-sm-5">Profile Needed</dt>
                <dd class="col-sm-7">@Model.ProfileNeeded</dd>
            </dl>
        </div>

        <div class="col-md-6">
            <h4>Required Abilities</h4>
            @if (Model.AssAbis != null && Model.AssAbis.Any())
            {
                <table class="table table-sm table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Ability Name</th>
                            <th>Minimum Level</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var req in Model.AssAbis)
                        {
                            <tr>
                                <td>@req.ability.Name</td>
                                <td>
                                    <span class="badge bg-primary">Level @req.AbiLevel</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No specific abilities are required for this assignment.</p>
            }
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>