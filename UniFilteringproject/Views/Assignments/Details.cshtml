@model UniFilteringproject.Models.Assignment

@{
    ViewData["Title"] = "Assignment Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Details for Assignment: @Model.Name</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Assignment</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    @* Dedicated Description Section *@
    <div class="card mb-4 border-info">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Description</h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="lead mb-0" style="white-space: pre-wrap;">@Model.Description</p>
            }
            else
            {
                <p class="text-muted mb-0 italic">No description provided for this assignment.</p>
            }
        </div>
    </div>

    <div class="row">
        @* General Requirements Column *@
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h4 class="mb-0">General Requirements</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Minimum Malshabs</dt>
                        <dd class="col-sm-7">@Model.MinMalshabs</dd>

                        <dt class="col-sm-5">Current Assigned</dt>
                        <dd class="col-sm-7">
                            <span class="badge @(Model.IsAboveMin ? "bg-success" : "bg-warning")">
                                @Model.CurrMalAssinged
                            </span>
                        </dd>

                        <dt class="col-sm-5">Dapar Needed</dt>
                        <dd class="col-sm-7">@Model.DaparNeeded</dd>

                        <dt class="col-sm-5">Profile Needed</dt>
                        <dd class="col-sm-7">@Model.ProfileNeeded</dd>
                    </dl>
                </div>
            </div>
        </div>

        @* Required Abilities Column *@
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h4 class="mb-0">Required Abilities</h4>
                </div>
                <div class="card-body">
                    @if (Model.AssAbis != null && Model.AssAbis.Any())
                    {
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Ability Name</th>
                                    <th>Minimum Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var req in Model.AssAbis)
                                {
                                    <tr>
                                        <td>@(req.ability?.Name ?? "Ability #" + req.AbilityId)</td>
                                        <td>
                                            <span class="badge bg-primary">Level @req.AbiLevel</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No specific abilities are required for this assignment.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>