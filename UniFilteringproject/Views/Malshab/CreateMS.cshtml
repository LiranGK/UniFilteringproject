@model UniFilteringproject.Models.Malshab

@{
    ViewData["Title"] = "Add New Malshab";
}

<h2>Add New Malshab</h2>

<form asp-action="CreateMS" method="post">
    <div class="form-group">

        @* שורה שם תוית שם השדה *@
        <label asp-for="Name" class="control-label"></label>

        @* כאן יוזן ערך השדה-במקרה זה השם *@
        <input asp-for="Name" class="form-control" />

        @* השורה הבאה מנהלת הזנה שאינה עומדת בדרישות המודל *@
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dapar" class="control-label"></label>
        <input asp-for="Dapar" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Dapar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Profile" class="control-label"></label>
        <textarea asp-for="Profile" class="form-control"></textarea>
        <span asp-validation-for="Profile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="IndexMs" class="btn btn-secondary">Back to List</a>
</form>
@* הקוד הבא מאפשר לבצע וולידציית נתוכים מוזנים בצד לקוח בלי לפנות לשרת *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
