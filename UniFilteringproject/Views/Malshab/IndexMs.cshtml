@model IEnumerable<UniFilteringproject.Models.Malshab>
@* 
השורה מאפשרת לעבור על כל המלש"בים הנמצאים בטבלה
למשל באמצעות לולאת 
foreach
 *@
@{
    ViewData["Title"] = "Malshab List";
}

<h2>Malshab List</h2>@* כותרת הדף *@

<table class="table table-striped">
    @* כותרות העמודות *@
    <thead>
        <tr>
            <th>Name</th>
            <th>Profile</th>
            <th>Dapar</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var malshab in Model)
        {
            <tr>
                <td>@malshab.Name</td>
                <td>@malshab.Profile.ToString()</td>
                <td>@malshab.Dapar.ToString()</td>
                <td>
                    @if (!string.IsNullOrEmpty(malshab.ImageUrl))
                    {
                        <img src="@malshab.ImageUrl" alt="@malshab.Name" style="max-width:100px;max-height:100px;" />
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("EditMS", "Malshab", new { id = malshab.Id })">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("CreateMs", "Malshab")">Add New Malshab</a>
